extends layouts/login-layout.pug
block content
    .loginContainer 
        h1 register
        form#registerForm(method="post", onsubmit="event.preventDefault(); validate_form();") 
            if error_message
                p.error_message #{error_message}

            input#firstName(type="text", name="firstName", value=firstName, placeholder="First Name", required="")
            input#lastName(type="text", name="lastName", placeholder="Last Name", value=lastName, required="")
            input#userName(type="text", name="userName", placeholder="Username", value=userName, required="")
            input#email(type="email", name="email", placeholder="Email", value=email, required="")
            input#password(type="password", name="password", placeholder="Password", required="")
            input#passwordConf(type="password", name="passwordConf", placeholder="Confirm Password", required="")
            input#userName(type="submit", value="Register")
        a(href="/login") Already have an account? Login here!
    
    script. 
        var passwordFile = document.getElementById("password")
        var passwordFileConf = document.getElementById("passwordConf")

        var form = document.getElementById("registerForm")

        // handle password confirmation mismatch
        function validate_form() {
            if (passwordFile.value != passwordFileConf.value) {
                alert("Password does not match!");
            } else {
                form.submit();
            }
        }